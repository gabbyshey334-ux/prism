# Prism App DigitalOcean Production Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-frontend-domain.vercel.app
BACKEND_URL=https://api.prism-app.com

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Redis Configuration (Docker internal)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=  # Leave empty for Docker Redis, or set a strong password
REDIS_DB=0

# Session Configuration
SESSION_SECRET=your-secure-random-session-secret-min-32-chars
JWT_SECRET=your-secure-random-jwt-secret-min-32-chars

# Social Media API Keys
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_WEBHOOK_SECRET=your-facebook-webhook-secret

INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

THREADS_APP_ID=your-threads-app-id
THREADS_APP_SECRET=your-threads-app-secret

BLUESKY_IDENTIFIER=your-bluesky-identifier
BLUESKY_PASSWORD=your-bluesky-password

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
GEMINI_API_KEY=your-gemini-api-key
CESDK_LICENSE_KEY=your-cesdk-license-key
CESDK_API_KEY=your-cesdk-api-key

# File Storage
SUPABASE_STORAGE_BUCKET=posts-media
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov,avi

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@prism-app.com

# Security Settings
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://your-frontend-domain.vercel.app
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Background Workers
WORKER_CONCURRENCY=5
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MINUTES=15

# DigitalOcean Specific
DIGITALOCEAN_DOMAIN=api.prism-app.com
DIGITALOCEAN_EMAIL=admin@prism-app.com
SSL_CERT_EMAIL=admin@prism-app.com

# Optional: Webhook URLs for external integrations
WEBHOOK_SECRET=your-webhook-secret
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Optional: CDN Configuration
CDN_URL=https://your-cdn.com
CDN_API_KEY=your-cdn-api-key

# Optional: Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token
